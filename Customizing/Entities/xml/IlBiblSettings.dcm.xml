<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="IlBiblSettings" table="il_bibl_settings">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default">-</option>
      </options>
    </field>
    <field name="url" type="string" column="url" length="128" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default">-</option>
      </options>
    </field>
    <field name="img" type="string" column="img" length="128" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="showInList" type="boolean" column="show_in_list" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
