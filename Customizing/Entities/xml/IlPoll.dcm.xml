<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="IlPoll" table="il_poll">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="question" type="string" column="question" length="1000" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="image" type="string" column="image" length="1000" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="onlineStatus" type="boolean" column="online_status" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="viewResults" type="boolean" column="view_results" nullable="false">
      <options>
        <option name="default">3</option>
      </options>
    </field>
    <field name="period" type="boolean" column="period" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="periodBegin" type="integer" column="period_begin" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="periodEnd" type="integer" column="period_end" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="maxAnswers" type="boolean" column="max_answers" nullable="false">
      <options>
        <option name="default">1</option>
      </options>
    </field>
    <field name="resultSort" type="boolean" column="result_sort" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="nonAnon" type="boolean" column="non_anon" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="showResultsAs" type="boolean" column="show_results_as" nullable="false">
      <options>
        <option name="default">1</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
