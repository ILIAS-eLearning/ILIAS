<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="OpenidProvider" table="openid_provider">
    <id name="providerId" type="integer" column="provider_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="enabled" type="boolean" column="enabled" nullable="true"/>
    <field name="name" type="string" column="name" length="128" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="url" type="string" column="url" length="512" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="image" type="smallint" column="image" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
