<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ChatroomSessions" table="chatroom_sessions">
    <indexes>
      <index name="i1_idx" columns="room_id,user_id"/>
      <index name="i2_idx" columns="disconnected"/>
      <index name="i3_idx" columns="user_id"/>
    </indexes>
    <id name="sessId" type="bigint" column="sess_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="roomId" type="integer" column="room_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="userId" type="integer" column="user_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="userdata" type="string" column="userdata" length="4000" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="connected" type="integer" column="connected" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="disconnected" type="integer" column="disconnected" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
