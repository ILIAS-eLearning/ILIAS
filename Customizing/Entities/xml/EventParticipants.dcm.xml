<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="EventParticipants" table="event_participants">
    <id name="eventId" type="integer" column="event_id"/>
    <id name="usrId" type="integer" column="usr_id"/>
    <field name="registered" type="boolean" column="registered" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="participated" type="boolean" column="participated" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="mark" type="text" column="mark" length="0" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="eComment" type="text" column="e_comment" length="0" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="contact" type="boolean" column="contact" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
