<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="PageLayout" table="page_layout">
    <id name="layoutId" type="integer" column="layout_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="content" type="text" column="content" length="0" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="title" type="string" column="title" length="128" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="string" column="description" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="active" type="boolean" column="active" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="styleId" type="integer" column="style_id" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="specialPage" type="boolean" column="special_page" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="modScorm" type="boolean" column="mod_scorm" nullable="true">
      <options>
        <option name="default">1</option>
      </options>
    </field>
    <field name="modPortfolio" type="boolean" column="mod_portfolio" nullable="true"/>
  </entity>
</doctrine-mapping>
