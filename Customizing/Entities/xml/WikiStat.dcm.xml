<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="WikiStat" table="wiki_stat">
    <id name="wikiId" type="integer" column="wiki_id"/>
    <id name="ts" type="datetime" column="ts"/>
    <field name="numPages" type="integer" column="num_pages" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="delPages" type="integer" column="del_pages" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="avgRating" type="integer" column="avg_rating" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="tsDay" type="string" column="ts_day" length="10" nullable="true">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="tsHour" type="boolean" column="ts_hour" nullable="true"/>
  </entity>
</doctrine-mapping>
