<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Glossary" table="glossary">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="isOnline" type="string" column="is_online" length="1" nullable="true">
      <options>
        <option name="fixed">1</option>
        <option name="default">n</option>
      </options>
    </field>
    <field name="virtual" type="string" column="virtual" length="7" nullable="true">
      <options>
        <option name="fixed">1</option>
        <option name="default">none</option>
      </options>
    </field>
    <field name="publicHtmlFile" type="string" column="public_html_file" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="publicXmlFile" type="string" column="public_xml_file" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="gloMenuActive" type="string" column="glo_menu_active" length="1" nullable="true">
      <options>
        <option name="fixed">1</option>
        <option name="default">y</option>
      </options>
    </field>
    <field name="downloadsActive" type="string" column="downloads_active" length="1" nullable="true">
      <options>
        <option name="fixed">1</option>
        <option name="default">n</option>
      </options>
    </field>
    <field name="presMode" type="string" column="pres_mode" length="10" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default">table</option>
      </options>
    </field>
    <field name="snippetLength" type="integer" column="snippet_length" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">200</option>
      </options>
    </field>
    <field name="showTax" type="boolean" column="show_tax" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
