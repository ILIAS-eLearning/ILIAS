<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Conditions" table="conditions">
    <indexes>
      <index name="tot_idx" columns="target_obj_id,target_type"/>
      <index name="i1_idx" columns="target_obj_id"/>
    </indexes>
    <id name="conditionId" type="integer" column="condition_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="targetRefId" type="integer" column="target_ref_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="targetObjId" type="integer" column="target_obj_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="targetType" type="string" column="target_type" length="8" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="triggerRefId" type="integer" column="trigger_ref_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="triggerObjId" type="integer" column="trigger_obj_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="triggerType" type="string" column="trigger_type" length="8" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="operator" type="string" column="operator" length="64" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="value" type="string" column="value" length="64" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="refHandling" type="boolean" column="ref_handling" nullable="false">
      <options>
        <option name="default">1</option>
      </options>
    </field>
    <field name="obligatory" type="boolean" column="obligatory" nullable="false">
      <options>
        <option name="default">1</option>
      </options>
    </field>
    <field name="numObligatory" type="boolean" column="num_obligatory" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="hiddenStatus" type="boolean" column="hidden_status" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
