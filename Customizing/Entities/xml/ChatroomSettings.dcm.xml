<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ChatroomSettings" table="chatroom_settings">
    <id name="roomId" type="integer" column="room_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="objectId" type="integer" column="object_id" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="roomType" type="string" column="room_type" length="20" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <field name="allowAnonymous" type="boolean" column="allow_anonymous" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="allowCustomUsernames" type="boolean" column="allow_custom_usernames" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="enableHistory" type="boolean" column="enable_history" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="restrictHistory" type="boolean" column="restrict_history" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="autogenUsernames" type="string" column="autogen_usernames" length="50" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="default">Anonymous #</option>
      </options>
    </field>
    <field name="allowPrivateRooms" type="boolean" column="allow_private_rooms" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="displayPastMsgs" type="integer" column="display_past_msgs" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="privateRoomsEnabled" type="integer" column="private_rooms_enabled" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="onlineStatus" type="boolean" column="online_status" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
