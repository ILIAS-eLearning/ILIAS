<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="MailOptions" table="mail_options">
    <indexes>
      <index name="i1_idx" columns="user_id,linebreak"/>
    </indexes>
    <id name="userId" type="integer" column="user_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="linebreak" type="boolean" column="linebreak" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="signature" type="string" column="signature" length="4000" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="incomingType" type="boolean" column="incoming_type" nullable="true"/>
    <field name="cronjobNotification" type="boolean" column="cronjob_notification" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="mailAddressOption" type="boolean" column="mail_address_option" nullable="false">
      <options>
        <option name="default">3</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
