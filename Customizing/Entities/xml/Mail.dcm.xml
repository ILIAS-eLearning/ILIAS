<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Mail" table="mail">
    <indexes>
      <index name="i1_idx" columns="user_id"/>
      <index name="i3_idx" columns="m_status"/>
      <index name="i4_idx" columns="sender_id,user_id"/>
      <index name="i2_idx" columns="folder_id"/>
    </indexes>
    <id name="mailId" type="integer" column="mail_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="userId" type="integer" column="user_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="folderId" type="integer" column="folder_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="senderId" type="integer" column="sender_id" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="sendTime" type="datetime" column="send_time" nullable="true"/>
    <field name="mStatus" type="string" column="m_status" length="16" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="mType" type="string" column="m_type" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="mEmail" type="boolean" column="m_email" nullable="true"/>
    <field name="mSubject" type="string" column="m_subject" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="importName" type="string" column="import_name" length="4000" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="usePlaceholders" type="boolean" column="use_placeholders" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="mMessage" type="text" column="m_message" length="0" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="rcpTo" type="text" column="rcp_to" length="0" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="rcpCc" type="text" column="rcp_cc" length="0" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="rcpBcc" type="text" column="rcp_bcc" length="0" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="attachments" type="text" column="attachments" length="0" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="tplCtxId" type="string" column="tpl_ctx_id" length="100" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="tplCtxParams" type="blob" column="tpl_ctx_params" length="0" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
