<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="IlRating" table="il_rating">
    <indexes>
      <index name="obj_idx" columns="obj_id,obj_type,sub_obj_id,sub_obj_type"/>
    </indexes>
    <id name="objId" type="integer" column="obj_id"/>
    <id name="objType" type="string" column="obj_type" length="10"/>
    <id name="subObjId" type="integer" column="sub_obj_id"/>
    <id name="subObjType" type="string" column="sub_obj_type" length="10"/>
    <id name="userId" type="integer" column="user_id"/>
    <id name="categoryId" type="integer" column="category_id"/>
    <field name="rating" type="integer" column="rating" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="tstamp" type="integer" column="tstamp" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
