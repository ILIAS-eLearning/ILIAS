<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="PersonalClipboard" table="personal_clipboard">
    <indexes>
      <index name="it_idx" columns="item_id,type"/>
    </indexes>
    <id name="userId" type="integer" column="user_id"/>
    <id name="itemId" type="integer" column="item_id"/>
    <id name="type" type="string" column="type" length="4"/>
    <field name="title" type="string" column="title" length="70" nullable="true">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="insertTime" type="datetime" column="insert_time" nullable="true"/>
    <field name="parent" type="integer" column="parent" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="orderNr" type="integer" column="order_nr" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
