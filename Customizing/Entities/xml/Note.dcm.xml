<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Note" table="note">
    <indexes>
      <index name="i1_idx" columns="author"/>
      <index name="i2_idx" columns="rep_obj_id,obj_id,obj_type"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="repObjId" type="integer" column="rep_obj_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="objId" type="integer" column="obj_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="objType" type="string" column="obj_type" length="10" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="type" type="integer" column="type" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="author" type="integer" column="author" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="noteText" type="text" column="note_text" length="0" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="label" type="integer" column="label" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="creationDate" type="datetime" column="creation_date" nullable="true"/>
    <field name="updateDate" type="datetime" column="update_date" nullable="true"/>
    <field name="subject" type="string" column="subject" length="200" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="noRepository" type="boolean" column="no_repository" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="newsId" type="integer" column="news_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
