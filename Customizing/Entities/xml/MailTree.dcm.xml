<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="MailTree" table="mail_tree">
    <indexes>
      <index name="i2_idx" columns="parent"/>
      <index name="i3_idx" columns="tree"/>
    </indexes>
    <id name="child" type="integer" column="child">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="tree" type="integer" column="tree" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="parent" type="integer" column="parent" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="lft" type="integer" column="lft" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="rgt" type="integer" column="rgt" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="depth" type="smallint" column="depth" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
