<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="UsrPortfolio" table="usr_portfolio">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="isOnline" type="boolean" column="is_online" nullable="true"/>
    <field name="isDefault" type="boolean" column="is_default" nullable="true"/>
    <field name="bgColor" type="string" column="bg_color" length="6" nullable="true">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="fontColor" type="string" column="font_color" length="6" nullable="true">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="img" type="string" column="img" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="ppic" type="boolean" column="ppic" nullable="true"/>
  </entity>
</doctrine-mapping>
