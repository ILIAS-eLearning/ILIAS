{
  "config": {
    "vendor-directory": "vendor/composer/vendor",
    "bootstrap": "vendor/composer/vendor/autoload.php"
  },
  "commit-msg": {
    "enabled": false,
    "actions": [
      {
        "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Beams",
        "options": {
          "subjectLength": 50,
          "bodyLineLength": 72
        },
        "conditions": []
      },
      {
        "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Rules",
        "options": [
          "\\CaptainHook\\App\\Hook\\Message\\Rule\\MsgNotEmpty",
          "\\CaptainHook\\App\\Hook\\Message\\Rule\\CapitalizeSubject"
        ]
      }
    ]
  },
  "pre-push": {
    "enabled": false,
    "actions": []
  },
  "pre-commit": {
    "enabled": true,
    "actions": [
      {
        "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting",
        "options": [],
        "conditions": []
      },
      {
        "action": "vendor/composer/vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config=./scripts/PHP-CS-Fixer/code-format.php_cs --using-cache=no -vvv {$STAGED_FILES|of-type:php} && git add {$STAGED_FILES|of-type:php}",
        "options": [],
        "conditions": [
          {
            "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
            "args": [
              [
                "*.php"
              ]
            ]
          }
        ]
      },
      {
        "action": "npx eslint --fix {$STAGED_FILES|of-type:js}",
        "options": [],
        "conditions": [
          {
            "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
            "args": [
              [
                "*.js"
              ]
            ]
          }
        ]
      },
      {
        "action": "scripts/sort_langfile_entries.sh check",
        "options": [],
        "conditions": [
          {
            "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
            "args": [
              [
                "*.lang"
              ]
            ]
          }
        ]
      }
    ]
  },
  "prepare-commit-msg": {
    "enabled": false,
    "actions": []
  },
  "post-commit": {
    "enabled": false,
    "actions": []
  },
  "post-merge": {
    "enabled": false,
    "actions": []
  },
  "post-checkout": {
    "enabled": false,
    "actions": []
  }
}
