<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        colors="true"
        stopOnFailure="false"
        backupGlobals="false"
        bootstrap="./test/bootstrap.php">
    <testsuite name="ilServicesHtmlSuite">
        <file>./test/ilServicesHtmlSuite.php</file>
    </testsuite>
    <logging>
        <log type="testdox-html"
             target="build/dox.html" />
    </logging>
    <filter>
        <whitelist>
            <directory suffix=".php">classes</directory>
        </whitelist>
    </filter>
</phpunit>