<!-- Styles -->
<!ELEMENT StyleSheet (Title, Description+, Style*)>
<!ELEMENT Title (#PCDATA)>
<!ELEMENT Description (#PCDATA)>


<!-- Style -->
<!ELEMENT Style (StyleParameter*)>
<!ATTLIST Style
	Tag CDATA #REQUIRED
	Class CDATA #REQUIRED
>

<!-- StyleParameter -->
<!ELEMENT StyleParameter EMPTY>
<!ATTLIST StyleParameter
	Name CDATA #REQUIRED
	Value CDATA #REQUIRED
>
